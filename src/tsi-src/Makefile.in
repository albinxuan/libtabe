INSTALL         = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA    = @INSTALL_DATA@
@SET_MAKE@

program_prefix = @program_prefix@
srcdir      = @srcdir@
top_srcdir  = @top_srcdir@
prefix      = $(program_prefix)@prefix@
exec_prefix = @exec_prefix@
libdir	    = @libdir@
bindir	    = @bindir@
datadir     = @datadir@/tabe/tsiyin
env_libpath = @env_libpath@
mergedb     = @enable_mergedb@

major_ver   = 0

RM          = rm -rf
SRC	    = tsi.src
TSIDB	    = tsi.db
YINDB	    = yin.db
ADD         = ../util/tsiadd
TY          = ../util/tsiyindump


all: $(mergedb) $(TSIDB) $(YINDB)

$(TSIDB): $(SRC)
	$(env_libpath)=.. $(ADD) -d $(TSIDB) -f $(SRC) -r -y

$(YINDB): $(TSIDB)
	$(env_libpath)=.. $(TY) -d $(TSIDB) -y $(YINDB)

mergedb:
	if [ ! -f $(TSIDB) ] && [ -f $(datadir)/$(TSIDB) ]; then \
		cp $(datadir)/$(TSIDB) .; touch $(SRC); fi

.PHONY: clean distclean install
clean:
	$(RM) $(TSIDB) $(YINDB) core

distclean:
	$(RM) $(TSIDB) $(YINDB)
	$(RM) Makefile

install: all
	if [ ! -d $(datadir) ]; then $(INSTALL) -d $(datadir); fi
	$(INSTALL_DATA) $(TSIDB) $(datadir)
	$(INSTALL_DATA) $(YINDB) $(datadir)

